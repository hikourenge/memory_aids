<!-- app/views/play_sessions/result.html.erb -->
<div class="max-w-2xl mx-auto py-8">
  <h1 class="text-2xl font-bold mb-4">
    <%= @deck.title %> - 結果
  </h1>

  <p class="mb-2">
    正解数：<%= @play_session.correct_count %> / <%= @deck.cards.count %>
  </p>
  <p class="mb-2">
    正答率：<%= @play_session.accuracy %> %
  </p>
  <% if @play_session.total_time_seconds.present? %>
    <p class="mb-4">
      所要時間：<%= @play_session.total_time_seconds %> 秒
    </p>
  <% end %>

  <div class="mt-6 flex gap-4">
    <%= link_to "デッキ一覧に戻る",
                decks_path,
                class: "rounded-md bg-gray-200 px-4 py-2" %>

    <%= link_to "もう一度プレイする",
                deck_play_sessions_path(@deck),
                data: { turbo_method: :post },
                class: "rounded-md bg-indigo-600 px-4 py-2 text-white" %>
  </div>
</div>
