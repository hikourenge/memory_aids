<div class="flex flex-col">
 <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">作成したデッキ一覧</h1>

    <%= link_to "新規デッキを作成", new_deck_path, class: "inline-flex items-center px-4 py-2 text-sm font-semibold rounded-lg shadow-sm bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
     <div class="mb-6 my-2">
        <%= search_form_for @q, url: my_decks_decks_path, method: :get do |f| %>
        <div class="flex gap-2 items-center">
            <%= f.search_field :title_cont,
                placeholder: "タイトル検索",
                class: "w-full rounded-md border border-gray-300 px-3 py-2 text-sm" %>

            <%= f.submit "検索",
                class: "rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white" %>
          </div>
         <% end %>
        </div>
   <div class="-m-1.5 overflow-x-auto">
    <div class="p-1.5 min-w-full inline-block align-middle">
        <%= render partial: 'mine', decks: @decks %>
    </div>
    <div class = "mt-4" >
      <%= paginate @decks, theme: 'tailwind' %>
    </div>
  </div>
</div>
