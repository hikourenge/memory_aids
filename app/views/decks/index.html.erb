<div class="mx-auto max-w-5xl px-4 pt-6">
    <h2 class = "text-2xl" >デッキ一覧</h2>
    <!-- 検索フォーム -->
    <div class="mb-6 my-2">
        <%= form_with url: decks_path, method: :get, local: true do |f| %>
        <div class="flex">
            <%= f.search_field :q,
                value: params[:q],
                placeholder: "検索ワード",
                class: "w-full rounded-l-md border border-gray-300 px-3 py-2 text-sm
                        focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" %>

            <%= f.submit "検索",
                class: "rounded-r-md border border-indigo-600 bg-indigo-600 px-4 py-2 text-sm font-medium text-white
                        hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1" %>
        </div>
        <% end %>
  </div>

  <!-- デッキ一覧 -->
  <div>
    <% if @decks.present? %>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
            <%= render partial: 'deck', collection: @decks %>
        </div>
    <% else %>
        <div class="mb-3">デッキがありません</div>
    <% end %>
</div>
    </div>
  </div>
</div>