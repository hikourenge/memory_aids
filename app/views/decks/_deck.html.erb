<div id="deck-id-<%= deck.id %>"
    class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
  <%= image_tag deck.deck_image_url, class: "h-40 w-full object-cover" %>

  <div class="p-4">
    <div class="mb-2 flex items-start">
      <h4 class="text-base font-semibold leading-tight text-gray-900">
        <%= link_to deck.title, '#', class: "hover:underline" %>
      </h4>

      <div class="ml-auto flex items-center gap-2 text-gray-400">
        <%= link_to '#',
              id: "button-edit-#{deck.id}",
              class: "inline-flex h-8 w-8 items-center justify-center rounded-full hover:bg-gray-100" do %>
          <%= heroicon "pencil-square", variant: "solid", class: "h-4 w-4 text-gray-600" %>
        <% end %>
      </div>
    </div>

    <ul class="mb-3 flex flex-wrap gap-x-4 gap-y-1 text-xs text-gray-500">
      <li class="flex items-center gap-1">
         <%= heroicon "user", variant: "solid", class: "h-4 w-4 text-gray-600" %>
        <span><%= deck.user.name %></span>
      </li>
      <li class="flex items-center gap-1">
           <%= heroicon "calendar-days", variant: "outline", class: "h-4 w-4 text-gray-600" %>
        <span><%= l deck.created_at, format: :short %></span>
      </li>
    </ul>
  </div>
</div>
