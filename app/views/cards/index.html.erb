<div class="mx-auto max-w-5xl px-4 pt-6">
  <div class="mb-4 flex items-center justify-between">
    <h2 class="text-2xl font-bold text-gray-900">
      <%= @deck.title %>のカード一覧
    </h2>
  </div>
  <div>
     <% if user_signed_in? && current_user.own?(@deck) %>
      <%= link_to "カードを新規登録", new_deck_card_path(@deck),
            class: "inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 mb-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700" %>
    <% end %>
  </div>

  <div class="overflow-hidden rounded-lg border border-gray-200">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase md:min-w-[50ch]">
            問題
          </th>
          <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase">
            番号（position）
          </th>
          <th scope="col" class="px-6 py-3 text-end text-xs font-medium text-gray-500 uppercase">
            編集・削除
          </th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200 bg-white">
        <% @cards.each do |card| %>
          <tr class="hover:bg-gray-50">
            <!-- 問題文 -->
            <td class="px-6 py-4 text-sm font-medium text-gray-900 md:min-w-[50ch] break-words">
              <%= link_to truncate(card.question, length: 50), deck_card_path(@deck, card), class: "hover:underline", title: card.question %>
            </td>

            <!-- position -->
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800">
                <%= card.position %>
              </span>
            </td>

            <!-- 編集・削除 -->
            <td class="px-6 py-4 whitespace-nowrap text-end text-sm font-medium">
              <% if user_signed_in? && current_user.own?(card) %>
                <%= link_to "編集", edit_deck_card_path(@deck, card),
                      class: "inline-flex items-center gap-x-2 rounded-lg bg-blue-100 px-3 py-1.5 text-sm font-semibold text-blue-600 hover:text-blue-800" %>

                <%= link_to "削除", deck_card_path(@deck, card),
                      data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                      class: "ml-2 inline-flex items-center gap-x-2 rounded-lg bg-red-100 px-3 py-1.5 text-sm font-semibold text-red-600 hover:text-red-800" %>
              <% else %>
                <span class="text-sm text-gray-400">—</span>
              <% end %>
            </td>
          </tr>
        <% end %>

        <% if @cards.empty? %>
          <tr>
            <td colspan="3" class="px-6 py-4 text-sm text-gray-500">
              カードがありません
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= link_to "デッキ詳細へ戻る", deck_path(@deck), class: "text-sm text-blue-600 hover:underline" %>
  </div>
</div>
