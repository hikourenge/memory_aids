<div class="row mb-3" id="hint-form">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: [card.deck, card, hint] do |f| %>
      <%= f.label :content %>
      <%= f.text_area :content, class: "block w-full rounded-md border border-gray-300 px-3 py-2 text-sm shadow-sm
                    focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500", rows: 4 %>
      <%= f.submit '保存',  
            class: "inline-flex items-center rounded-md bg-indigo-600 px-4 py-2 mt-2 text-sm font-semibold text-white
                    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
         <%= link_to "追加をやめる",
        close_deck_card_hints_path(card.deck, card),
        data: { turbo_frame: "hint_form" },
        class: "inline-flex items-center rounded-lg bg-gray-200 px-3 py-1.5 mt-2 text-sm font-semibold text-gray-700 hover:bg-gray-300" %>
    <% end %>
  </div>
</div>