<tr id="hint-<%= hint.id %>">
  <td>
    <p><%= simple_format(hint.content) %></p>
  </td>
  <% if current_user.own?(hint.card) %>

         <td class="px-6 py-3 whitespace-nowrap text-end text-sm font-medium">
        <div class="mt-3 flex justify-end gap-2">

        <%= link_to edit_deck_card_hint_path(hint.card.deck, hint.card, hint),
                id: "button-edit-#{hint.id}",
                data: { turbo_frame: "hint_form" },
                class: "inline-flex items-center rounded-md border border-gray-300 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-50" do %>
            <%= heroicon "pencil-square", variant: "solid", class: "mr-1 h-4 w-4 text-gray-600" %>
            編集
            <% end %>
    <%= button_to "削除",
          deck_card_hint_path(hint.card.deck, hint.card, hint),
          method: :delete,
          form: {
            data: {
              turbo_confirm: "本当に削除しますか？",
              turbo_stream: true
            }
          },
          class: "inline-flex items-center rounded-lg bg-red-100 px-3 py-1.5 text-sm font-semibold text-red-600 hover:text-red-800" %>

          </div>
  </td>

  <% end %>
</tr>