<div class=" bg-green-200 sticky top-0">
    <header class="container mx-auto pb-1">
        <div class = "flex justify-between items-center">
            <h1 class="text-4xl font-semibold">Memory_aids</h1>
        </div>
        <div>
            <ul class="md:flex md:justify-end md:items-center">
                <% if user_signed_in? %>
                <li>
                    <div class="text-center my-4 border-b-1 border-white md:border-none md:mx-2">
                        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "px-8 py-2 bg-gray-300 hover:bg-blue-200 rounded inline-block"  %>
                    </div>
                </li>
                <% else %>
                <li class="md:mx-2">
                    <div class="text-center my-4">
                        <%= link_to "新規登録", new_user_registration_path, class: "px-8 py-2 bg-gray-300 hover:bg-blue-200 rounded inline-block" %>
                    </div>
                </li>
                <li class="md:mx-2">
                    <div class="text-center my-4">
                        <%= link_to "ログイン", new_user_session_path, class: "px-8 py-2 bg-gray-300 hover:bg-blue-200 rounded inline-block" %>
                    </div>
                </li>
                <% end %>
            </ul>
        </div>
    </header>
</div>